{
  "compilerOptions": {
    "lib": ["es5", "es6"],                          
    "target": "es6",                                
    "module": "commonjs",
    "moduleResolution": "node", 
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,                              
    "strict": true,                                 
    "baseUrl": "./",
    "removeComments": true,
    "importHelpers": true,
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"]
  },
  "exclude" : ["./node_modules"],
  "include" : ["./src/app.ts"]
}
